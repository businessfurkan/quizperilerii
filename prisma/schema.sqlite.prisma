// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Category {
  id          String @id @default(cuid())
  slug        String @unique
  name        String
  description String
  icon        String
  gradient    String
  quizzes     Quiz[]
}

model Quiz {
  id                String           @id @default(cuid())
  title             String
  description       String
  difficulty        String // Kolay, Orta, Zor
  image             String
  icon              String
  gradient          String
  resultTitle       String?
  resultDescription String?
  isPopular         Boolean          @default(false)
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt

  categorySlug String
  category     Category @relation(fields: [categorySlug], references: [slug])

  items TournamentItem[]
}

model TournamentItem {
  id     String @id @default(cuid())
  text   String
  image  String
  quizId String
  quiz   Quiz   @relation(fields: [quizId], references: [id], onDelete: Cascade)
  order  Int    @default(0)
}

model Poll {
  id          String       @id @default(cuid())
  question    String
  description String?
  slug        String       @unique
  isActive    Boolean      @default(true)
  startDate   DateTime     @default(now())
  endDate     DateTime?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  
  options     PollOption[]
  votes       Vote[]
}

model PollOption {
  id        String   @id @default(cuid())
  text      String
  image     String?
  votes     Int      @default(0)
  pollId    String
  poll      Poll     @relation(fields: [pollId], references: [id], onDelete: Cascade)
  votesList Vote[]
}

model Vote {
  id          String   @id @default(cuid())
  pollId      String
  poll        Poll     @relation(fields: [pollId], references: [id], onDelete: Cascade)
  optionId    String
  option      PollOption @relation(fields: [optionId], references: [id], onDelete: Cascade)
  
  ageRange    String
  gender      String
  city        String
  
  createdAt   DateTime @default(now())
}

model BoxNightTask {
  id        String   @id @default(cuid())
  text      String
  type      String   // reward, risk, fun
  icon      String   // Heart, Lock, Skull, etc.
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// User Model for Voting
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String   // Hashed or simple for MVP
  createdAt DateTime @default(now())
  
  votes     OutfitVote[]
}

// Outfit Competition Models
model OutfitSubmission {
  id        String   @id @default(cuid())
  email     String   @unique
  fullName  String?
  imageUrl  String
  imageHash String?  // For duplicate detection
  status    String   @default("PENDING") // PENDING, APPROVED, REJECTED, SELECTED, DELETED
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  entries   OutfitCompetitionEntry[]
}

model OutfitCompetition {
  id           String   @id @default(cuid())
  status       String   @default("WAITING") // WAITING, ACTIVE, COMPLETED
  currentRound String   @default("ROUND_1") // ROUND_1, SEMI_FINAL, FINAL
  startDate    DateTime @default(now())
  endDate      DateTime?
  
  entries      OutfitCompetitionEntry[]
}

model OutfitCompetitionEntry {
  id            String   @id @default(cuid())
  competitionId String
  competition   OutfitCompetition @relation(fields: [competitionId], references: [id])
  submissionId  String
  submission    OutfitSubmission @relation(fields: [submissionId], references: [id])
  round         String   // ROUND_1, SEMI_FINAL, FINAL
  votes         Int      @default(0)
  
  voteRecords   OutfitVote[]
  
  @@unique([competitionId, submissionId])
}

model OutfitVote {
  id        String   @id @default(cuid())
  entryId   String
  entry     OutfitCompetitionEntry @relation(fields: [entryId], references: [id])
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  userIp    String
  createdAt DateTime @default(now())
}

model AuditLog {
  id          String   @id @default(cuid())
  action      String   // DELETE, LOGIN, UPDATE, ERROR, SECURITY
  description String
  userId      String?
  ip          String?
  timestamp   DateTime @default(now())
}

model LoveMeterQuestion {
  id        String   @id @default(cuid())
  text      String
  option1   String
  option2   String
  option3   String
  option4   String
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model WhoIsLikelyQuestion {
  id        String   @id @default(cuid())
  text      String
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
